{
    "name": "burlang/site",
    "description": "Russian-Buryat, Buryat-Russian electronic dictionary",
    "keywords": ["buryat dictionary", "burlang", "buryat-lang"],
    "homepage": "https://burlang.ru/",
    "type": "project",
    "minimum-stability": "stable",
    "license": "BSD-3-Clause",
    "require": {
        "php": "^8.1",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-zip": "*",
        "bower-asset/bililiterange": "~4.0",
        "bower-asset/codemirror": "~5.9.0",
        "bower-asset/codemirror-buttons": "~1.0.5",
        "mobiledetect/mobiledetectlib": "~2.8.45",
        "npm-asset/htmx.org": "^1.9.12",
        "vlucas/phpdotenv": "^5.6",
        "yiisoft/yii2": "~2.0.49",
        "yiisoft/yii2-bootstrap": "~2.0.11",
        "yiisoft/yii2-symfonymailer": "^4.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.57",
        "overtrue/phplint": "^9.3",
        "pestphp/pest": "^2.34",
        "phpstan/phpstan": "^1.11",
        "roave/security-advisories": "dev-latest",
        "symfony/http-client": "^6.4"
    },
    "autoload": {
        "files": [
            "src/functions.php"
        ],
        "psr-4": {
            "app\\": "src/"
        }
    },
    "config": {
        "process-timeout": 1800,
        "sort-packages": true,
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "lint": "phplint",
        "php-cs-fixer": "php-cs-fixer --config=.php-cs-fixer.php",
        "tests": "pest",
        "analyze": "phpstan analyse --memory-limit=512M"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
